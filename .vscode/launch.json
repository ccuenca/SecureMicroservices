    "version": "0.2.0",
    "configurations": [
        {
            "name": "Movies.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Movies.API)",
            "program": "${workspaceFolder}/Movies.API/bin/Debug/net6.0/Movies.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Movies.API",
            "stopAtEntry": false,
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
